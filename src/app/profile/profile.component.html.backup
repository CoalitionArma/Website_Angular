<div class="profile-container">
  <!-- Modern Profile Header Card -->
  <mat-card class="profile-header-card">
    <              <!-- Section Selection Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>Section</mat-label>
                <mat-icon matPrefix>group</mat-icon>
                <mat-select formControlName="section" placeholder="Select your section">
                  <mat-option value="HQ">HQ</mat-option>
                  <mat-option value="Company">Company</mat-option>
                  <mat-option value="non-member">Non-Member</mat-option>
                </mat-select>
                <mat-hint>Your section within the Coalition</mat-hint>
              </mat-form-field>

              <!-- Rank Selection Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>Rank</mat-label>
                <mat-icon matPrefix>workspace_premium</mat-icon>
                <mat-select formControlName="veterancy" placeholder="Select your rank">
                  <mat-option value="N/A">N/A</mat-option>
                  <mat-option value="Recruit">Recruit</mat-option>
                  <mat-option value="Member">Member</mat-option>
                  <mat-option value="Veteran">Veteran</mat-option>
                  <mat-option value="Senior">Senior</mat-option>
                  <mat-option value="Leader">Leader</mat-option>
                  <mat-option value="Officer">Officer</mat-option>
                  <mat-option value="Commander">Commander</mat-option>
                </mat-select>
                <mat-hint>Your rank within the Coalition</mat-hint>
              </mat-form-field>

            </div>ent class="profile-header-content">
      <div class="profile-avatar-section">
        <img [src]="userService.avatarUrl" class="profile-avatar" alt="User Avatar">
        <div class="profile-info">
          <h1 class="profile-name">
            {{ userService.discordUser?.global_name }}
            <span *ngIf="userService.dbUser?.callsign" class="callsign-inline">"{{ userService.dbUser?.callsign }}"</span>
          </h1>
          <div class="profile-badges">
            <span class="badge rank-badge">
              <mat-icon>workspace_premium</mat-icon>
              {{ userService.dbUser?.veterancy || 'N/A' }}
            </span>
            <span class="badge section-badge">
              <mat-icon>group</mat-icon>
              {{ userService.dbUser?.section || 'non-member' }}
            </span>
          </div>
        </div>
      </div>
    </mat-card-content>
  </mat-card>

  <!-- Main Content Area -->
  <div class="main-content">
    <!-- General Info Section -->
    <mat-card class="settings-card">
      <mat-expansion-panel [(expanded)]="generalInfoExpanded" class="general-info-panel">
        <mat-expansion-panel-header>
          <mat-panel-title class="section-title">
            <mat-icon>info</mat-icon>
            General Info
          </mat-panel-title>
          <mat-panel-description>
            Account settings and profile information
          </mat-panel-description>
        </mat-expansion-panel-header>
      
        <div class="settings-content">
          <!-- Toast Messages -->
          <div *ngIf="saveFailed || saved" class="toast-container">
            <div *ngIf="saveFailed" class="toast error-toast">
              <mat-icon>error</mat-icon>
              <span>{{ saveFailedReason }}</span>
              <button mat-icon-button (click)="dismissToast()">
                <mat-icon>close</mat-icon>
              </button>
            </div>
            <div *ngIf="saved" class="toast success-toast">
              <mat-icon>check_circle</mat-icon>
              <span>Profile updated successfully!</span>
              <button mat-icon-button (click)="dismissToast()">
                <mat-icon>close</mat-icon>
              </button>
            </div>
          </div>
          <!-- Loading Overlay -->
          <div *ngIf="formLoading" class="loading-overlay">
            <mat-spinner diameter="40"></mat-spinner>
            <span class="loading-text">Loading profile...</span>
          </div>

          <!-- Profile Form -->
          <form [formGroup]="userInfoForm" (ngSubmit)="saveChanges()" class="profile-form">
            <div class="form-grid">
              <!-- Email Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>Email Address</mat-label>
                <mat-icon matPrefix>email</mat-icon>
                <input type="email" matInput formControlName="email" placeholder="your.email@example.com">
                <mat-error *ngIf="userInfoForm.get('email')?.hasError('email')">
                  Please enter a valid email address
                </mat-error>
                <mat-error *ngIf="userInfoForm.get('email')?.hasError('required')">
                  Email is required
                </mat-error>
              </mat-form-field>

              <!-- ARMA GUID Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>ARMA GUID</mat-label>
                <mat-icon matPrefix>videogame_asset</mat-icon>
                <input type="text" matInput formControlName="armaID" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx">
                <mat-hint>Required for event participation</mat-hint>
                <mat-error *ngIf="userInfoForm.get('armaID')?.hasError('pattern')">
                  Please enter a valid ARMA GUID
                </mat-error>
                <mat-error *ngIf="userInfoForm.get('armaID')?.hasError('required')">
                  ARMA GUID is required
                </mat-error>
              </mat-form-field>

              <!-- Steam ID Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>Steam ID64</mat-label>
                <mat-icon matPrefix>sports_esports</mat-icon>
                <input type="text" matInput formControlName="steamID" placeholder="17-digit Steam ID">
                <mat-hint>Optional: Links your Steam profile</mat-hint>
                <mat-error *ngIf="userInfoForm.get('steamID')?.hasError('pattern')">
                  Please enter a valid 17-digit Steam ID64
                </mat-error>
              </mat-form-field>

              <!-- Community Selection Field -->
              <mat-form-field appearance="outline" class="form-field">
                <mat-label>Community</mat-label>
                <mat-icon matPrefix>groups</mat-icon>
                <mat-select formControlName="communityId" placeholder="Select your community">
                  <mat-option [value]="null">No Community</mat-option>
                  <mat-option *ngFor="let community of communitiesList" [value]="community.id">
                    {{ community.name }}
                  </mat-option>
                </mat-select>
                <mat-hint>Optional: Your primary community affiliation</mat-hint>
              </mat-form-field>

            </div>
            <!-- Action Buttons -->
            <div class="action-buttons">
              <button 
                *ngIf="shouldShowDiscardButton" 
                mat-stroked-button 
                color="warn" 
                type="button"
                (click)="discardChanges()"
                [disabled]="saving"
                class="discard-btn">
                <mat-icon>cancel</mat-icon>
                Discard Changes
              </button>
              
              <button 
                mat-raised-button 
                color="primary" 
                type="submit"
                [disabled]="shouldDisableSaveButton"
                class="save-btn">
                <mat-icon *ngIf="saving" class="spinning-icon">refresh</mat-icon>
                <mat-icon *ngIf="!saving">save</mat-icon>
                {{ saving ? 'Saving...' : 'Save Changes' }}
              </button>
            </div>
          </form>
        </div>
      </mat-expansion-panel>
    </mat-card>
  </div>

  <!-- Statistics Section -->
  <mat-card class="statistics-card">
    <mat-card-header>
      <mat-card-title class="section-title">
        <mat-icon>bar_chart</mat-icon>
        Player Statistics
      </mat-card-title>
      <mat-card-subtitle>ARMA 4 / Reforger Performance Data</mat-card-subtitle>
    </mat-card-header>
    
    <mat-card-content class="statistics-content">
      <app-user-stats></app-user-stats>
    </mat-card-content>
  </mat-card>
</div>
